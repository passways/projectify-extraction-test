    "better-auth": "^1.3.26",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "pino": "^9.12.0",
    "postgres": "^3.4.7",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "drizzle-kit": "^0.31.5",
    "pino-pretty": "^13.1.1",
    "tsx": "^4.20.6",
    "typescript": "~5.8.3"
  },
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0"
    }
